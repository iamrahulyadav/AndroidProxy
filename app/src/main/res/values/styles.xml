    <style name="packageInstallActivityDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- item name="android:windowBackground"         设置背景透明度及其颜色值 -->
    <!-- item name="android:windowIsTranslucent"      设置当前Activity是否透明-->
    <!-- item name="android:windowAnimationStyle"     设置当前Activity进出方式-->
    <style name="GraspPreViewTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">#ffffff</item>
       <item name="android:windowActionBar">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    //背景不透明 pay支付样式
    <style name="payDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/pay_dialog_view_main_background</item>
        <item name="android:windowEnterAnimation">@anim/dialog_pay_start_animation_set</item>
        <item name="android:windowExitAnimation">@anim/dialog_pay_exit_animation_set</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="payDialogStyleAnimation" parent="android:Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_pay_start_animation_set</item>
        <item name="android:windowExitAnimation">@anim/dialog_pay_exit_animation_set</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">

        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

